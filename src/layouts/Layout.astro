---
import { ViewTransitions } from 'astro:transitions';
// ... other imports

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ta">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tamil Dictionary App" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Noto+Sans+Tamil:wght@400;700&display=swap" rel="stylesheet">
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--bg-color: #fff;
		--text-color: #2D2D2D;
		--accent-color: #A445ED;
		--input-bg: #F4F4F4;
		--shadow-color: rgba(0, 0, 0, 0.1);
	}
	html {
		font-family: 'Noto Sans Tamil', 'Lora', serif;
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem; /* Increased top padding */
	}
</style>

<script>
	const themeToggle = document.getElementById('theme-toggle');
	if (themeToggle) {
		themeToggle.addEventListener('change', () => {
			document.body.classList.toggle('dark-theme');
		});
	}
</script>
